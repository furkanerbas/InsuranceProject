@using System.Threading.Tasks
@using InsureApp.Models
@model InsureApp.Models.Konut_DigerAddViewModel

@{
    ViewBag.Title = "Konut Bilgileri Ekleme";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h2>Konut Bilgileri Ekleme</h2>

<form asp-controller="Konut_Diger" asp-action="Add" method="post">
    
    <div class="form-group">
        <label asp-for="Konut_Diger.Police_no">Poliçe No :</label>
        <select asp-for="Konut_Diger.Police_no" class="form-control h-100"
                asp-items="@(new SelectList(Model.Police,"Police_no","Police_no"))"></select>
        <span asp-validation-for="Konut_Diger.Police_no"></span>
    </div>

    <div class="form-group">
        <label asp-for="Konut_Diger.Adres">Adres :</label>
        <input asp-for="Konut_Diger.Adres" class="form-control" placeholder="Adres" />
        <span asp-validation-for="Konut_Diger.Adres"></span>
    </div>

    <input type="submit" value="EKLE" class="btn btn-xs btn-success" />

</form>

