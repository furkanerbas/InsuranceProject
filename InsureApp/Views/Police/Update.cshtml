@using System.Threading.Tasks
@using InsureApp.Models
@model InsureApp.Models.PoliceUpdateViewModel

@{
    ViewBag.Title = "Poliçe Güncelleme";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h2>Poliçe Güncelle</h2>

<form asp-controller="Police" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Police.Baslangic_tarihi"></label>
        <input asp-for="Police.Baslangic_tarihi" class="form-control" placeholder="Başlangıç Tarihi:" />
        <span asp-validation-for="Police.Baslangic_tarihi"></span>
    </div>
    <div class="form-group">
        <label asp-for="Police.Bitis_tarihi"></label>
        <input asp-for="Police.Bitis_tarihi" class="form-control" placeholder="Bitiş Tarihi:" />
        <span asp-validation-for="Police.Bitis_tarihi"></span>
    </div>
    <div class="form-group">
        <label asp-for="Police.Vize_tarihi"></label>
        <input asp-for="Police.Vize_tarihi" class="form-control" placeholder="Vize Tarihi:" />
        <span asp-validation-for="Police.Vize_tarihi"></span>
    </div>
    <div class="form-group">
        <label asp-for="Police.Sigorta_bedeli"></label>
        <input asp-for="Police.Sigorta_bedeli" class="form-control" placeholder="Sigorta Bedeli:" />
        <span asp-validation-for="Police.Sigorta_bedeli"></span>
    </div>
   

    <input type="hidden" asp-for="Police.Police_no" />
    <input type="submit" value="GÜNCELLE" class="btn btn-xs btn-success" />

</form>
