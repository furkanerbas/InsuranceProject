@using System.Threading.Tasks
@using InsureApp.Models
@model InsureApp.Models.PoliceAddViewListModel

@{
    ViewBag.Title = "Poliçe Ekleme";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h2>Yeni bir poliçe ekle</h2>

<form asp-controller="Police" asp-action="Add" method="post">
    <div class="form-group" >
        <label asp-for="Police.Musteri_id">Müşteri Ad Soyad :</label>
        <select asp-for="Police.Musteri_id" class="form-control h-100 font-weight-bold"
                asp-items="@(new SelectList(Model.MusterilerList,"Musteri_id","FullName"))"></select>
        <span asp-validation-for="Police.Musteri_id"></span>
    </div>

    <div class="form-group">
        <label asp-for="Police.Policetur_id">Poliçe Türü :</label>
        <select asp-for="Police.Policetur_id" class="form-control h-100 font-weight-bold"
                asp-items="@(new SelectList(Model.PoliceTuru,"Policetur_id","Police_turu"))"></select>
        <span asp-validation-for="Police.Policetur_id"></span>
    </div>

    <div class="form-group">
        <label asp-for="Police.Baslangic_tarihi">Başlangıç Tarihi :</label>
        <input asp-for="Police.Baslangic_tarihi" class="form-control" placeholder="Başlangıç Tarihi" />
        <span asp-validation-for="Police.Baslangic_tarihi"></span>
    </div>
    <div class="form-group">
        <label asp-for="Police.Bitis_tarihi">Bitiş Tarihi :</label>
        <input asp-for="Police.Bitis_tarihi" class="form-control" placeholder="(---)--- -- --)" />
        <span asp-validation-for="Police.Bitis_tarihi"></span>
    </div>
    <div class="form-group">
        <label asp-for="Police.Vize_tarihi">Vize Tarihi :</label>
        <input asp-for="Police.Vize_tarihi" class="form-control" placeholder="Vize Tarihi" />
        <span asp-validation-for="Police.Vize_tarihi"></span>
    </div>
    <div class="form-group">
        <label asp-for="Police.Sigorta_bedeli">Sigorta Bedeli :</label>
        <input asp-for="Police.Sigorta_bedeli" class="form-control" placeholder="Açıklama" />
        <span asp-validation-for="Police.Sigorta_bedeli"></span>
    </div>

    <input type="submit" value="EKLE" class="btn btn-xs btn-success" />

</form>

