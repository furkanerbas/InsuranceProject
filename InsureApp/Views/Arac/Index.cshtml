@using InsureApp.Entities.Concrete
@model InsureApp.Models.AracListViewModel

@{
    ViewBag.Title = "Araç Sigorta İşlemleri";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h2>Araç Bilgileri Listesi</h2>

<a class="btn btn-xs btn-success" asp-controller="Arac" asp-action="Add">Araç Bilgileri Ekle</a>
<div>
    <table class="table table-hover table-striped">
        <tr>
            <td>Poliçe No</td>
            <td>Araç Türü</td>
            <td>Plaka</td>
            <td>Ruhsat No</td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var arac in Model.Arac) 
        {
            <tr>
                <td>@arac.Police_no</td>
                <td>@arac.Arac_turu</td>
                <td>@arac.Plaka</td>
                <td>@arac.Ruhsat_no</td>

                <td><a class="btn btn-xs btn-info" asp-controller="Admin" asp-action="Update" asp-route-productId="@arac.Arac_id">Güncelle</a></td>
                <td><a class="btn btn-xs btn-danger" asp-controller="Admin" asp-action="Delete" asp-route-productId="@arac.Arac_id">Sil</a></td>
            </tr>
        }
    </table>
</div>




